{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
      "requireConfigFile": false,
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 6,
      "sourceType": "module"
  },
    "rules": {
      "new-cap": 0,
      "semi": "off",
      "max-len": ["error", 120, {"ignoreUrls": true}],
      "no-plusplus": "off",
      "no-tabs": "off",
      "no-alert": "off",
      "prefer-destructuring": "off",
      "no-console": "off"
    },
    
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": ["eslint:recommended", "airbnb-base", "prettier"]
  }